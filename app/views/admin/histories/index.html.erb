<div class="content">
  <div class="page-header">
    <div class="icon">
      <span class="ico-layout-7"></span>
    </div>
    <h1>Kelompok Data <small>ADMINISTRASI SISTEM INFORMASI PEMBANGUNAN DAERAH</small></h1>
  </div>
  <%= form_tag admin_histories_path, :method => 'get' do %>
    <%= select("history", :search, @user_options) %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>
  <div class="row-fluid">
    <div class="span12">
      <div class="block">
        <div class="data-fluid">
          <table cellpadding="0" cellspacing="0" width="100%" class="table">
            <thead>
              <tr>
                <th>
                  No
                </th>
                <th width="25%">
                  Note
                </th>
                <th width="25%">
                  Kecamatan
                </th>
              </tr>
            </thead>
            <tbody>
              <% @histories.each_with_index do |history, idx| %>
                <tr>
                  <td>
                    <%= idx + 1 %>
                  </td>
                  <td>
                    <%= history.note rescue "-" %>
                  </td>
                  <td>
                    <%= history.user_name rescue '-' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate(@data_sources) %>
        </div>
      </div>
    </div>
  </div>
</div>
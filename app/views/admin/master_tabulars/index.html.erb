<% content_for :javascript do %>
  <script>
    var table = $("#tree");
    table.treetable({ expandable: true});
    table.treetable('expandAll');
  </script>
<% end %>
<div class="content">
  <div class="page-header">
    <div class="icon">
      <span class="ico-layout-7"></span>
    </div>
    <h1>Master Tabular <small>ADMINISTRASI SISTEM INFORMASI PEMBANGUNAN DAERAH</small></h1>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="span3">
        <a id="add-data" href="/admin/master_tabulars/new" class="btn btn-large btn-block btn-warning add-data" type="button">Tambah data master tabular</a>
      </div>
      <div class="data-fluid">
        <div class="row-form">
          <%= form_tag admin_tabulars_path, :method => :post do %>
            <%= label_tag :pilih_kecamatan %>
            <%= select("data_source", :user_id, @user_options) %>
            <%= submit_tag "Filter", :class => "btn" %>
          <% end %>
        </div>
      </div>
      <div class="block">
        <div class="data-fluid">
          <table id="tree">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
              <%= render @master_tabulars %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
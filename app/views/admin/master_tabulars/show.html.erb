<div class="content">
  <div class="page-header">
    <div class="icon">
      <span class="ico-layout-7"></span>
    </div>
    <h1>Master Tabular <small>ADMINISTRASI SISTEM INFORMASI PEMBANGUNAN DAERAH</small></h1>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="block">
        <div class="head">
          <h2><%= @master_tabular.ref_code %> <%= @master_tabular.name %></h2>
        </div>
        <div class="data-fluid">
          <%= link_to "Tambah data master tabular", new_admin_master_tabular_path(:parent_id => @master_tabular), :class => "btn" %>
          <table cellpadding="0" cellspacing="0" width="100%" class="table">
            <thead>
              <tr>
                <th width="25%">
                  Nama Sumber Data
                </th>
                <th width="25%">
                  Action
                </th>
              </tr>
            </thead>
            <tbody>
              <%= nested_master_tabulars(@master_tabulars.arrange(:order => :created_at)) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


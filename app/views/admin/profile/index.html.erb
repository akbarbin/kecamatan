<div class="row-fluid">
  <div class="span6">
    <div class="block">
      <div class="head">
        <h2>Edit Profile</h2>
      </div>
      <div class="data-fluid">
        <%= form_for @user, :url => modify_admin_profile_index_path do |f| %>
          <div class="row-form">
            <div class="span3"><%= f.label :nama_depan %></div>
            <div class="span9"><%= f.text_field :first_name, :placeholder => "Isilah nama depan Anda" %></div>
          </div>
          <div class="row-form">
            <div class="span3"><%= f.label :nama_belakang %></div>
            <div class="span9"><%= f.text_field :last_name, :placeholder => "Isilah nama belakang Anda" %></div>
          </div>
          <div class="row-form">
            <div class="span3"><%= f.label :no_telp %></div>
            <div class="span9"><%= f.text_field :telephone, :placeholder => "Isilah no telepone Anda" %></div>
          </div>
          <div class="row-form">
            <div class="span3"><%= f.label :fax %></div>
            <div class="span9"><%= f.text_field :fax, :placeholder => "Isilah fax Anda" %></div>
          </div>
          <div class="row-form">
            <div class="span3"><%= f.label :email %></div>
            <div class="span9"><%= f.text_field :email, :placeholder => "Isilah email Anda" %></div>
          </div>
          <div class="row-form">
            <div class="span3"><%= f.label :website %></div>
            <div class="span9"><%= f.text_field :website, :placeholder => "Isilah website telepone Anda" %></div>
          </div>
          <div class="row-form">
            <div class="span3"><%= f.label :image %></div>
            <div class="span9">
              <div class="input-append file">
                <input type="file" name="file"/>
                <input type="text"/>
                <button class="btn">Browse</button>
              </div>
            </div>
          </div>
          <div class="row-form">
            <div class="span3"><%= f.submit "Update", :class => "btn" %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="span6">
    <div class="block">
      <div class="head">
        <h2>Foto Anda</h2>
      </div>
      <div class="data-fluid">
        <img src="/assets/examples/photo/example_1s.jpg" heigth="300" width="300" />
      </div>
    </div>
  </div>
</div>

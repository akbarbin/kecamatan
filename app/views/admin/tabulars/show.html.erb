<h2>Brand : <%= @brand.name %></h2>
<div>
  <table width="400px">
    <thead style="text-align: center">
      <tr>
        <th>Categories</th>
      </tr>
    </thead>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, admin_brand_category_path(@brand, category) %></td>
      </tr>
    <% end %>
  </table>
</div>
<br/>
<div>
  <%= link_to "Add Category", new_admin_brand_category_path(@brand) %> |
  <%= link_to "View all category", admin_brand_categories_path(@brand) %> |
  <%= link_to "Back to brands", admin_brands_path %>
</div>
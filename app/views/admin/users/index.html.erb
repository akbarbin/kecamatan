
<div class="content">
  <div class="page-header">
    <div class="icon">
      <span class="ico-layout-7"></span>
    </div>
    <h1>Kelompok Data <small>ADMINISTRASI SISTEM INFORMASI PEMBANGUNAN DAERAH</small></h1>
  </div>
  <%= form_tag admin_users_path, :method => 'get' do %>
    <%= label_tag :pilih_kecamatan %>
    <%= text_field_tag "user[search]" %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>
  <div class="row-fluid">
    <div class="span12">
      <div class="span3">
        <%= link_to "Tambah user", new_admin_user_path, :class => "btn btn-large btn-block btn-warning" %>
      </div>
      <div class="block">
        <div class="data-fluid">
          <table cellpadding="0" cellspacing="0" width="100%" class="table">
            <thead>
              <tr>
                <th width="5%">
                  No
                </th>
                <th width="25%">
                  Kecamatan
                </th>
                <th width="25%">
                  No Telp
                </th>
                <th width="25%">
                  Alamat
                </th>
                <th width="25%">
                  Action
                </th>
              </tr>
            </thead>
            <tbody>
              <% @users.each_with_index do |user, idx| %>
                <tr>
                  <td>
                    <%= idx + 1 %>
                  </td>
                  <td>
                    <%= link_to user.name, admin_user_path(user) %>
                  </td>
                  <td>
                    <%= user.telephone rescue "-" %>
                  </td>
                  <td>
                    <%= user.address rescue "-" %>
                  </td>
                  <td>
                    <%= link_to "Edit", edit_admin_user_path(user), :id => user.id %>
                    <%= link_to "Delete", admin_user_path(user), :method => :delete, :confirm => "Are you sure to delete this?" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate(@users) %>
        </div>
      </div>
    </div>
  </div>
</div>